# Force npm to use the package-lock.json
package-lock=true

# Ignore optional dependencies to prevent installation issues
optional=true

# Set the engine-strict flag to false to prevent engine check failures
engine-strict=false

# Disable platform-specific binaries
rollup-disk-bundle=false

# Set network and cache settings
timeout=600000
prefer-offline=true

# Enable package-lock for workspaces
package-lock=true

# Enable package-lock for root
package-lock-only=true

# Enable package-lock for CI
ci-package-lock=true

# Disable package-lock for CI
ci-package-lock=false

# Set the platform and architecture explicitly
platform=linux
arch=x64

# Set the Node version
engine-strict=false

# Disable package-lock verification
ignore-scripts=true

# Set the cache directory to a writable location
cache=/tmp/npm-cache

# Set the user config to a writable location
userconfig=/tmp/npmrc
